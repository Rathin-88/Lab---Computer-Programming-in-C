/* Using For Loop */

#include<stdio.h>
int main() {
    inti, num, fact=1;

    printf("Enter a number: ");
    scanf("%d",&num);

    for(i=1;i<=number;i++)
{
        fact= fact*i;
    }
    printf("Factorial of %d is: %d",num, fact);
    return0;
}




/*Using While Loop*/

#include<stdio.h>
int main() {
intnum, fact=1;

printf("Enter a number: ");
scanf("%d",&num);

 while(num>1){
   fact= fact*num;
   num--;
    }
printf("Factorial is: %d", fact);
return0;
}

